# ===== STAGE 1: Build the WAR with Maven =====
FROM maven:3.9.9-eclipse-temurin-17 AS build
WORKDIR /app

# Copy pom.xml and download dependencies first (for caching)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source and build WAR
COPY src ./src
RUN mvn clean package -DskipTests

# ===== STAGE 2: Deploy WAR to Tomcat =====
FROM tomcat:10.1-jdk17
WORKDIR /usr/local/tomcat

# Remove default Tomcat webapps
RUN rm -rf webapps/*

# Copy WAR file from Maven build and rename it to ROOT.war
COPY --from=build /app/target/*.war webapps/ROOT.war

# Expose the container's Tomcat port
EXPOSE 8085

# Update Tomcat configuration to listen on 8085 instead of 8080
RUN sed -i 's/port="8080"/port="8085"/' conf/server.xml

# Start Tomcat
CMD ["catalina.sh", "run"]
